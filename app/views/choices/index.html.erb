<p id="notice"><%= notice %></p>

<h1>Choices</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Question</th>
      <th>Choice body</th>
      <th>Choice score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choices.each do |choice| %>
      <tr>
        <td><%= choice.question_id %></td>
        <td><%= choice.choice_body %></td>
        <td><%= choice.choice_score %></td>
        <td><%= link_to 'Show', choice %></td>
        <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
        <td><%= link_to 'Destroy', choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Choice', new_choice_path %>
